{
  "name": "z-image",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:web": "turbo run dev --filter=@z-image/web",
    "dev:api": "turbo run dev --filter=@z-image/api",
    "build:web": "turbo run build --filter=@z-image/web",
    "build:api": "turbo run build --filter=@z-image/api",
    "build:shared": "turbo run build --filter=@z-image/shared"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@vitest/coverage-v8": "^2.1.8",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
